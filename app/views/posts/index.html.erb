<%= form_tag('/salons/#{:salon_id}/posts', method: "get")  do %>
    <%= text_field_tag :search, "", {class: "form-control col-8 search-text-field", placeholder: 'title content ...'} %>
    <%= submit_tag "Search", class: "btn btn-success" %>
<% end %> 


<h1>投稿一覧</h1>
<!--(<= @salon.title %>)-->

<% @posts.each do |post| %>
    <p><%= link_to Salon.find_by(id: post.salon_id).title, salon_path(post.salon_id) %><%= post.title %>..<%= post.content.slice(0..15) %></P>
<% end %>

