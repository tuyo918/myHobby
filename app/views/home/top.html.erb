<div class="category-index-area">
<!--< i = 0 %>-->
  <% @categories.each do |category| %>
    <!--< if i%4 === 0 %>-->
    <!-- <div class="category-index-row">-->
    <!--< end %>-->
      <div class="card">
        <%= link_to "salons/category/#{category.id}" do %>
          <%= image_tag "/no-image.png", class: "card-img-top", :alt => category.name %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text"><%= category.detail.truncate(100) %></p>
        </div>
      </div>
